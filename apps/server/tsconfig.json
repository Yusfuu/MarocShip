{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@interfaces/*": ["interfaces/*"],
      "@enums/*": ["enums/*"],
      "@errors/*": ["errors/*"],
      "@helpers/*": ["helpers/*"],
      "@plugins/*": ["plugins/*"],
      "@config/*": ["config/*"]
    }
  },
  "exclude": ["build", "tests", "node_modules"],
  "include": ["src/**/*.ts"]
}
